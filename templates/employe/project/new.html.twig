{% extends 'baseEmploye.html.twig' %}

{% block title %}New Project{% endblock %}

{% block body %}
    <h1>Create new Project</h1>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Formulaire pour ajouter un projet</h5>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_row(form.nomprojet, {'attr': {'class': 'form-control'}, 'id': 'nom_projet'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.categorie, {'attr': {'class': 'form-control'}, 'id': 'categorie'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.descriptionprojet, {'attr': {'class': 'form-control'}, 'id': 'descriptionprojet'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.budgetprojet, {'attr': {'class': 'form-control'}, 'id': 'budgetprojet'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.datecreation, {'attr': {'class': 'form-control'}, 'id': 'datecreation'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dureeprojet, {'attr': {'class': 'form-control'}, 'id': 'dureeprojet'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.statutprojet, {'attr': {'class': 'form-control'}, 'id': 'statutprojet'}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
