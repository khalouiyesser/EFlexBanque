 {% extends 'baseEmploye.html.twig' %}

        {% block body %}


<div class="page-wrapper">
			<div class="content container-fluid">
				<div class="page-header">
					<div class="row align-items-center">
						<div class="col">
							<div class="mt-5">
								<h4 class="card-title float-left mt-2">Liste des projets</h4> <a href="{{ path('app_project_newE') }}" class="btn btn-primary float-right veiwbutton">+ Nouveau projet</a> </div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-12">
						<div class="card card-table">
							<div class="card-body booking_card">
								<div class="table-responsive">
									<table class="datatable table table-stripped table table-hover table-center mb-0">
										<thead>
											          <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom de client</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom de projet</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Categorie</th>
                                          <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>

                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                                          <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Budget</th>

                       <th class="text-secondary opacity-7"></th>
                    </tr>
										</thead>
										<tbody>
										                                            {% for project in projects %}

											<tr>
												<td>
													<h2 class="table-avatar">
                                                    <a href="profile.html" class="avatar avatar-sm mr-2">
<img class="avatar-img rounded-circle" src="{{ asset('Employe/assets/img/profiles/avatar-03.jpg') }}" alt="User Image">
                                                    <a href="profile.html"> {{project.user.name ?? 'No user' }}<span></span></a>
                                                    </h2>
                                                </td>
												<td>{{ project.nomProjet }}</td>
												<td>{{ project.categorie }}</td>
												<td>{{ project.dateCreation ? project.dateCreation|date('Y-m-d') : '' }}</td>
 												<td>{{ project.descriptionProjet }}</td>
												<td>{{ project.budgetprojet }}</td>


												<td class="text-right">
													<div class="dropdown dropdown-action"> <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
														<div class="dropdown-menu dropdown-menu-right"> <a class="dropdown-item" href="{{ path('app_project_editE', {'id': project.id}) }}"><i class="fas fa-pencil-alt m-r-5"></i> Modifier</a> <a class="dropdown-item" href="{{ path('app_project_delete', {'id': project.id}) }}"onclick="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');" data-toggle="modal" data-target="#delete_asset"><i class="fas fa-trash-alt m-r-5"></i> Delete</a> </div>
													</div>
												</td>
											</tr>
        {% endfor %}



										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}
