{% extends 'baseEmploye.html.twig' %}
{% block body %}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Add Article</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form) }}
                <div class="row formtype">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.nomAutArt, ' Nom') }}
                            {{ form_widget(form.nomAutArt, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.nomAutArt) }}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.adrAutArt, ' Addresse') }}
                            {{ form_widget(form.adrAutArt, { 'attr': {'class': 'form-control', 'placeholder': 'exemple@exemple.com'} }) }}
                            {{ form_errors(form.adrAutArt) }}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.datePubArt, ' Date de publication de l\'article') }}
                            {{ form_widget(form.datePubArt, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                            {{ form_errors(form.datePubArt) }}
                        </div>
                    </div>
                    <!-- Ajoutez les autres champs de votre formulaire de la même manière -->
                      <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.dureeArt, ' Durée de l\'atrticle') }}
                            {{ form_widget(form.dureeArt, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                            {{ form_errors(form.dureeArt) }}
                        </div>
                    </div>
                      <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.titreArt, ' Titre de l\'article') }}
                            {{ form_widget(form.titreArt, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                            {{ form_errors(form.titreArt) }}
                        </div>
                    </div>
                      <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.contenuArt, ' Contenu de l\'article') }}
                            {{ form_widget(form.contenuArt, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                            {{ form_errors(form.contenuArt) }}
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.categorieArt, ' Catégorie de l\'article') }}
                            {{ form_widget(form.categorieArt, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                            {{ form_errors(form.categorieArt) }}
                        </div>
                    </div>
                      <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.piecejointeArt, ' Pièce jointe') }}
                            {{ form_widget(form.piecejointeArt, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                            {{ form_errors(form.piecejointeArt) }}
                        </div>
                    </div>
                </div>
                 <button type="submit" class="btn btn-primary buttonedit1">Creer Article</button>
                {{ form_end(form) }}
            </div>
        </div>
       
    </div>
</div>
{% endblock %}
