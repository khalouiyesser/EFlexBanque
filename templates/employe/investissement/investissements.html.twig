 {% extends 'baseEmploye.html.twig' %}

        {% block body %}

  <div class="container-fluid">
        <div class="row">
          <div class="col-12 mt-4">
            <div class="card mb-4">
            <div class="card-header pb-0 p-3">
                <h6 class="mb-1">Investissements</h6>
                <p class="text-sm">Liste d'investissements </p>
              </div>
              <div class="card-body p-3">
                <div class="row">

                        {% for investissement in investissements %}

                  <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                    <div class="card card-blog card-plain">
                      <div class="position-relative">
                        <a class="d-block shadow-xl border-radius-xl">
                                                  {% if investissement.id == 2 %}

                          <img
                            src="{{ asset('client/assets/img/home-decor-3.jpg') }}"
                             alt="img-blur-shadow"
                                     class="img-fluid shadow border-radius-xl"
                                       />
                                       {% else %}

                          <img
                            src="{{ asset('client/assets/img/home-decor-1.jpg') }}"
                             alt="img-blur-shadow"
                                     class="img-fluid shadow border-radius-xl"
                                       />
                                       {% endif %}



                        </a>
                        </div>
                        <div class="card-body px-1 pb-0">
                          <p class="text-gradient text-dark mb-2 text-sm">

                          </p>
                        <a href="{{ path('app_investissement_show', {'id': investissement.id}) }}">
                          <h5>{{ investissement.nom }}</h5>
                         <p class="mb-4 text-sm">
                         {{ investissement.description }}
                        </p>
                        <div
                          class="d-flex align-items-center justify-content-between"
                        >
                          <a
                            type="button"
                            class="btn btn-outline-primary btn-sm mb-0" href="{{ path('app_investissement_show', {'id': investissement.id}) }}"
                          >
                            Voir l'inves...                          </a>
                          <div class="avatar-group mt-2">
                            <a
                              href="javascript:;"
                              class="avatar avatar-xs rounded-circle"
                              data-bs-toggle="tooltip"
                              data-bs-placement="bottom"
                              title="Elena Morison"
                            >
                             <img
                                     src="{{ asset('client/assets/img/team-1.jpg') }}"
                                    alt="Image placeholder"
                                        />

                            </a>
                            <a
                              href="javascript:;"
                              class="avatar avatar-xs rounded-circle"
                              data-bs-toggle="tooltip"
                              data-bs-placement="bottom"
                              title="Ryan Milly"
                            >
                              <img
                                        alt="Image placeholder"
                                        src="{{ asset('client/assets/img/team-2.jpg') }}"
                                    />

                            </a>
                            <a
                              href="javascript:;"
                              class="avatar avatar-xs rounded-circle"
                              data-bs-toggle="tooltip"
                              data-bs-placement="bottom"
                              title="Nick Daniel"
                            >
                            <img
                                            alt="Image placeholder"
                                            src="{{ asset('client/assets/img/team-3.jpg') }}"
                                        />

                            </a>
                            <a
                              href="javascript:;"
                              class="avatar avatar-xs rounded-circle"
                              data-bs-toggle="tooltip"
                              data-bs-placement="bottom"
                              title="Peterson"
                            >
                                                                  <img
                                          alt="Image placeholder"
                                          src="{{ asset('client/assets/img/team-4.jpg') }}"
                                      />

                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                        {% endfor %}
 </div>
            </div>
          </div>
        </div>

      </div>

{% endblock %}
