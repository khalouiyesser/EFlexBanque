{% extends 'baseadmin.html.twig' %}

{% block body %}
    {% block nompage %}Modifier l'article{% endblock %}
    <br><br><br><br><br>

    <div class="container">
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Formulaire pour modifier un article</h5>
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_row(form.categorieArt, {'label': 'Catégorie de l\'article :', 'attr': {'class': 'form-control'}, 'id': 'categorieArt'}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.titreArt, {'label': 'Titre de l\'article :', 'attr': {'class': 'form-control'}, 'id': 'titreArt'}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.contenuArt, {'label': 'Contenu de l\'article:', 'attr': {'class': 'form-control'}, 'id': 'contenuArt'}) }}
                        </div>
                        <div class="mb-3">

                            <a href="{{ asset('uploads_directory_rec/' ~ article.piecejointeArt) }}" target="_blank">Consulter la pièce jointe</a>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.piecejointeArt, {'label': 'Pièce jointe :', 'attr': {'class': 'form-control'}, 'id': 'piecejointeArt'}) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Modifier</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
