{% extends 'baseclient.html.twig' %}

    {% block body %}
    <div class="container main-content" style="margin-bottom: 50px;">
        <div class="row justify-content-center mt-5" style="margin-bottom: 80px;" style="height: 500px;">
            <div class="col-lg-12">
                
            <div class="profile card card-body px-3 pt-3 pb-0" style="background-color: #93C572; height: 100%;">
                <div class="profile-head">
                        <div class="photo-content">
                            <div class="cover-photo rounded"></div>
                        </div>
                        <div class="profile-info">
                            <div class="profile-photo">
                                <img src="images/profile/profile.png" class="img-fluid rounded-circle" style="max-width: 150px;" alt="">
                            </div>
                            <div class="profile-details">
                                <div class="profile-name px-3 pt-2">
                                    <h4 class="text-primary mb-0"></h4>
                                </div>
                                <div class="profile-email px-2 pt-2">
                                    <p>Email</p>
                                    <h4 class="text-muted mb-0">{{ app.user.username }}</h4>
                                </div>
                                <div class="dropdown ms-auto">
                                    <a href="{{ path('app_ajouterrdv') }}" class="btn btn-primary light sharp rounded-pill">Demander un rendez-vous</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center" style="height: auto;">
            <div class="col-xl-8">
                {% for credit in app.user.credit %}

                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <div class="card" style="height: 100%;">
                                <div class="card-body">
                                    <div class="profile-statistics">
                                        <div class="text-center">
                                            <div class="row">

                                                <div class="col">
                                                    <h3 class="m-b-0">MONTANT</h3><span>{{ credit.montant }}</span>
                                                </div>
                                                <div class="col">
                                                    <h3 class="m-b-0">objectif</h3><span>{{ credit.statusclient }}</span>
                                                </div>
                                                <div class="col">
                                                    <h3 class="m-b-0">Date de début</h3><span>{{ credit.datedebut | date('Y-m-d') }}</span>
                                                </div>
                                                <div class="col">
                                                    <h3 class="m-b-0">Taux</h3><span>{{ credit.taux }}</span>
                                                </div>
                                                <div class="col">
                                                    <h3 class="m-b-0">satatus</h3><span>{{ credit.status }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
    
    <footer class="footer" style="background-color: #a4c639; padding: 50px 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 style="color: white;">Contactez-nous</h5>
                    <p style="color: white;">Si vous avez des questions ou des préoccupations, n'hésitez pas à nous contacter :</p>
                    <ul class="list-unstyled" style="color: white;">
                        <li>Téléphone : +1234567890</li>
                        <li>Email : info@yourbank.com</li>
                        <li>Adresse : 123 Bank Street, Ville, Pays</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h5 style="color: white;">Liens rapides</h5>
                    <ul class="list-unstyled" style="color: white;">
                        <li><a href="#" style="color: white;">Accueil</a></li>
                        <li><a href="#" style="color: white;">À propos de nous</a></li>
                        <li><a href="#" style="color: white;">Services</a></li>
                        <li><a href="#" style="color: white;">FAQ</a></li>
                        <li><a href="#" style="color: white;">Politique de confidentialité</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    {% endblock %}
    