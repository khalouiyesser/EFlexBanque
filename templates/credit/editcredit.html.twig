    {% extends 'baseadmin.html.twig' %}

    {% block body %}
    {% block nompage %}modifier credit{% endblock %}
     
    
    
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-4">Formulaire pour modifier une demande de cr√©dit</h5>
                            {{ form_start(formc, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_row(formc.id_client, {'attr': {'class': 'formc-control'}, 'id': 'id_client'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.montant, {'attr': {'class': 'form-control'}, 'id': 'montant'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.statusclient, {'attr': {'class': 'form-control'}, 'id': 'statusclient'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.mensualite, {'attr': {'class': 'form-control'}, 'id': 'mensualite'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.datedebut, {'attr': {'class': 'form-control'}, 'id': 'datedebut'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.duree, {'attr': {'class': 'form-control'}, 'id': 'duree'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.taux, {'attr': {'class': 'form-control'}, 'id': 'taux', 'readonly': 'readonly'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.status, {'attr': {'class': 'form-control'}, 'id': 'status'}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(formc.fraisretard, {'attr': {'class': 'form-control'}, 'id': 'fraisretard', 'readonly': 'readonly'}) }}
                            </div>
                            <div class="mb-3">
                                <label for="oldFichesalire">Ancien Fichesalire:</label>
                                <input type="text" id="oldFichesalire" name="oldFichesalire" class="form-control" value="{{ oldFichesalire }}" readonly>
                            </div>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            {{ form_end(formc) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    {% endblock %}