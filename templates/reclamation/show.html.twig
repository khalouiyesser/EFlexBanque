{% extends 'baseadmin.html.twig' %}
{% block nompage %}Réclamations
{% endblock %}

{% block body %}
    <!--**********************************
               Content body start
           ***********************************-->
    <div class="content-body">
        <div
                class="container-fluid">


            <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="email-left-box px-0 mb-3">
                                <div class="p-0">
                                    <a href="#" class="btn btn-primary btn-block">Réclamation</a>
                                </div>
                                <div class="mail-list rounded mt-4">
                                    <a href="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" class="list-group-item" onclick="return confirm('Voulez-vous supprimer cet élément ?');">
                                        <i class="fa fa-trash font-18 align-middle me-2"></i>Supprimer</a>

                                    {# <a href="javascript:void()" class="list-group-item"><i class="fa fa-trash font-18 align-middle me-2"></i>Supprimer</a>
                                    #}
                                </div>
                                <div class="mail-list rounded overflow-hidden mt-4">
                                    <div class="intro-title d-flex justify-content-between my-0">
                                        <h5>Département</h5>
                                        <i class="fa fa-chevron-down"></i>
                                    </div>
                                    <a href="email-inbox.html" class="list-group-item">
										<span class="icon-warning">
											<i class="fa fa-circle"></i>
										</span>
                                        {{ reclamation.depRec }}
                                    </a>

                                </div>
                                <div class="mail-list rounded overflow-hidden mt-4">
                                    <div class="intro-title d-flex justify-content-between my-0">
                                        <h5>Pièce Jointe</h5>
                                        <i class="fa fa-chevron-down"></i>
                                    </div>
                                    {% if reclamation.pieceJRec == 'Aucune pièce jointe' %}
                                        &nbsp;&nbsp;Aucune pièce jointe
                                    {% else %}
                                        <a href="{{ asset('uploads_directory/' ~ reclamation.pieceJRec) }}" target="_blank">
                                            <button class="badge  badge-success">Ouvrir PDF</button>
                                        </a>
                                        {#                                    {{ reclamation.pieceJRec }} #}
                                        <a href="{{ asset('uploads_directory/' ~ reclamation.pieceJRec) }}" download="{{reclamation.pieceJRec ~ '_' ~ '.pdf' }}">
                                            <button class="btn-rounded btn-warning">Télécharger  &nbsp;<span class="btn-icon-start text-warning">
												<i class="fa fa-download color-warning"></i>
											</span>
                                            </button>
                                        </a>
                                    {% endif %}
                                </div>

                                <div class="text-start mt-4 mb-3">
                                    <a href="{{path('app_reclamation_index')}}" class="btn btn-primary btn-sl-sm me-2" >
                                    <span class="me-2">
											<i class="fa fa-paper-plane"></i>
										</span>Liste des réclamation</a>

                                </div>
                            </div>
                            <div class="email-right-box ms-0 ms-sm-4 ms-sm-0">
                                <div class="toolbar mb-4" role="toolbar">
                                    <div class="btn-group mb-1">
                                        <button type="button" class="btn btn-primary light px-3">
                                            <i class="fa fa-archive"></i>
                                        </button>
                                        <button type="button" class="btn btn-primary light px-3">
                                            <i class="fa fa-exclamation-circle"></i>
                                        </button>
                                        <button type="button" class="btn btn-primary light px-3">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                    <div class="btn-group mb-1">
                                        <button type="button" class="btn btn-primary light dropdown-toggle px-3" data-bs-toggle="dropdown">
                                            <i class="fa fa-folder"></i>
                                            <b class="caret m-l-5"></b>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="javascript: void(0);">Social</a>
                                            <a class="dropdown-item" href="javascript: void(0);">Promotions</a>
                                            <a class="dropdown-item" href="javascript: void(0);">Updates</a>
                                            <a class="dropdown-item" href="javascript: void(0);">Forums</a>
                                        </div>
                                    </div>


                                    <div class="mb-3">
                                        <label>Nom :</label>
                                        <input type="text" class="form-control bg-transparent" value="{{ reclamation.nomAutRec }}" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label>Adresse :</label>
                                        <input type="text" class="form-control bg-transparent" value="{{ reclamation.adrRec }}" readonly>
                                    </div>


                                    <div class="mb-3">
                                        <label>Objet de la réclamation :</label>
                                        <input type="text" class="form-control bg-transparent" value="{{ reclamation.objetRec }}" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label>Contenu de la réclamation :</label>
                                        <textarea class="form-control bg-transparent" rows="15" readonly>{{ reclamation.contenuRec }}</textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label>Date de la reclamation :</label>
                                        <input type="text" class="form-control bg-transparent" value="{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d') : '' }}" readonly>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--**********************************
            Content body end
        ***********************************-->
{% endblock %}
