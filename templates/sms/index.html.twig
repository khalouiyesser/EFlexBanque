{% extends 'baseadmin.html.twig' %}

{% block title %}Envoyer un SMS{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Envoyer un SMS</h3>
                    </div>
                    <div class="card-body">
                        <p class="mb-4">Veuillez remplir le formulaire ci-dessous pour envoyer un SMS.</p>
                        <form method="post" action="{{ path('send_sms') }}">
                            <div class="form-group">
                                <label for="number">Numéro de téléphone :</label>
                                <input type="text" name="number" id="number" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="name">Nom de l'expéditeur :</label>
                                <input type="text" name="name" id="name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="text">Text :</label>
                                <textarea name="text" id="text" class="form-control" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Envoyer le SMS</button>
                        </form>
                    </div>
                </div>
                {% if smsSent %}
                    <div class="alert alert-success mt-3 text-center">Le SMS a été envoyé avec succès.</div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

