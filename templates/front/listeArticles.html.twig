{% extends 'front/detailArticle.html.twig' %}
{% block nom %}
    <h1> Nos articles</h1>
{% endblock %}
{% block body %}

    <style>
        .card {
            height: 100%;
        }

        .card-body {
            height: 100%;
        }

        .card-img-top {
            height: 200px; /* Ajustez la hauteur de l'image selon vos besoins */
            object-fit: cover; /* Pour s'assurer que l'image couvre complètement la zone */
        }
        .card-title {
            display: -webkit-box;
            -webkit-line-clamp: 1; /* Nombre de lignes */
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .card-text {
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Nombre de lignes */
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>

    <section class="py-5">
        <div class="container">
            <div class="row align-items-stretch">
                {% for article in articles %}
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="{{ asset('uploads_directory/' ~ article.imageArt) }}" alt="{{ article.titreArt }}">
                            <div class="position-relative overflow-hidden" style="height:50px;margin-top:-50px;">
                                <div class="position-absolute w-100 top-0 z-index-1">
                                    <svg class="waves waves-sm" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 40" preserveAspectRatio="none" shape-rendering="auto">
                                        <defs>
                                            <path id="card-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
                                        </defs>
                                        <g class="moving-waves">
                                            <use xlink:href="#card-wave" x="48" y="-1" fill="rgba(255,255,255,0.30)"></use>
                                            <use xlink:href="#card-wave" x="48" y="3" fill="rgba(255,255,255,0.35)"></use>
                                            <use xlink:href="#card-wave" x="48" y="5" fill="rgba(255,255,255,0.25)"></use>
                                            <use xlink:href="#card-wave" x="48" y="8" fill="rgba(255,255,255,0.20)"></use>
                                            <use xlink:href="#card-wave" x="48" y="13" fill="rgba(255,255,255,0.15)"></use>
                                            <use xlink:href="#card-wave" x="48" y="16" fill="rgba(255,255,255,0.99)"></use>
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{ article.titreArt }}</h4>
                                <p><i class="calendar-icon">&#128197;</i>{{ article.datePubArt ? article.datePubArt|date('d/m/Y') : '' }}</p>
                                <p>Catégorie : {{ article.categorieArt }}</p>
                                <div class="card-text content-toggle" style="height: auto;">
                                    {{ article.contenuArt }}
                                </div>
                                <a href="{{ path('app_article_showfront', {'id': article.id}) }}" class="text-primary icon-move-right">Lire la suite
                                    <i class="fas fa-arrow-right text-xs ms-1" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                {% for articleApi in articlesall %}
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            {% if articleApi.image is not empty %}
                                <img class="card-img-top" src="{{ articleApi.image }}" alt="Image de l'article">
                            {% else %}
                                <img class="card-img-top" src="{{ asset('uploads_directory/Economie-circulaire-developpement-durable-et-finance-verte.jpg') }}" alt="Image de l'article">
                            {% endif %}
                            <div class="position-relative overflow-hidden" style="height:50px;margin-top:-50px;">
                                <div class="position-absolute w-100 top-0 z-index-1">
                                    <svg class="waves waves-sm" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 40" preserveAspectRatio="none" shape-rendering="auto">
                                        <defs>
                                            <path id="card-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
                                        </defs>
                                        <g class="moving-waves">
                                            <use xlink:href="#card-wave" x="48" y="-1" fill="rgba(255,255,255,0.30)"></use>
                                            <use xlink:href="#card-wave" x="48" y="3" fill="rgba(255,255,255,0.35)"></use>
                                            <use xlink:href="#card-wave" x="48" y="5" fill="rgba(255,255,255,0.25)"></use>
                                            <use xlink:href="#card-wave" x="48" y="8" fill="rgba(255,255,255,0.20)"></use>
                                            <use xlink:href="#card-wave" x="48" y="13" fill="rgba(255,255,255,0.15)"></use>
                                            <use xlink:href="#card-wave" x="48" y="16" fill="rgba(255,255,255,0.99)"></use>
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">{{ articleApi.title }}</h4>
                                <p><i class="calendar-icon">&#128197;</i>{{ articleApi.date_published | date('d/m/Y') }}</p>
                                <div class="card-text content-toggle" style="height: auto;">
                                    {{ articleApi.content_text }}
                                </div>
                                <a href="{{ path('app_article_detailsarticleApi', {'id': articleApi.id}) }}" class="text-primary icon-move-right">Lire la suite
                                    <i class="fas fa-arrow-right text-xs ms-1" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
