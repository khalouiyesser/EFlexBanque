<!DOCTYPE html>

<title>Commentaire</title>

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ commentaire.dateCreation ? commentaire.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NomAutCom</th>
                <td>{{ commentaire.nomAutCom }}</td>
            </tr>
            {% for item in commentaire.reponse%}
            <tr>
                <td>{{ item }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_index') }}">back to list</a>

    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>

    {{ include('commentaireHadhemi/_delete_form.html.twig') }}
{% endblock %}
