{% extends 'baseclient.html.twig' %}

{% block body %}

<style>
    .form-control {
        border-color: #ccc; /* Couleur de la bordure grise */
    }
</style>

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_row(form._token) }}

<body>
 <div id="main-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="card">
                <div class="card-header text-center ">
                    <h4 class="card-title" style="font-weight: bold;">Demande de Virement Bancaire</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form>

                            <div class="mb-3 row justify-content-center ">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.rib, 'RIB') }}</label>
                                <div class="col-sm-9  ">
                                    {{ form_widget(form.rib, { 'attr': {'class': 'form-control', 'placeholder': 'Votre RIB'} }) }}
                                    {{ form_errors(form.rib, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>


                            <div class="mb-3 row justify-content-center align-items-center"> <!-- Ajout des classes justify-content-center et align-items-center -->
                                <label class="col-sm-3 col-form-label" style="margin-right: 550px ">{{ form_label(form.NometPrenom, 'Nom et Prénom') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.NometPrenom, { 'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom et prénom'} }) }}
                                    {{ form_errors(form.NometPrenom, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>



                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.Cin, 'Cin') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.Cin, { 'attr': {'class': 'form-control', 'placeholder': 'Entrez le numéro de votre cin'} }) }}
                                    {{ form_errors(form.Cin, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>
                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.photoCinV, 'Photo Cin') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.photoCinV, { 'attr': {'class': 'form-control', '': ''} }) }}
                                    {{ form_errors(form.photoCinV, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>

                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.phoneNumber, 'Numero de telephone') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control', 'placeholder': 'Entrez votre Numero de telephone'} }) }}
                                    {{ form_errors(form.phoneNumber, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>



                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.Email, 'Email') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.Email, { 'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse email'} }) }}
                                    {{ form_errors(form.Email, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>


                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.TypeVirement, 'TypeVirement') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.TypeVirement, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
                                    {{ form_errors(form.TypeVirement, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>



                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.transferezA,'transferezA') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.transferezA, {'attr': {'class': 'form-control', 'placeholder': 'Entrer le nom '}}) }}
                                    {{ form_errors(form.transferezA, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>



                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label " style="margin-right: 550px ">{{ form_label(form.NumBeneficiare,'NumBeneficiare') }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.NumBeneficiare, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le mnumero de bénéficiaire'}}) }}
                                    {{ form_errors(form.NumBeneficiare, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>

                            <div class="mb-3 row justify-content-center align-items-center">
                                <label class="col-sm-3 col-form-label" style="margin-right: 550px">{{ form_label(form.Montant,'Montant') }}</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        {{ form_widget(form.Montant, {'attr': {'class': 'form-control', 'placeholder': 'Entrer le montant'}}) }}
                                        <span class="input-group-text">TND</span>
                                    </div>
                                    {{ form_errors(form.Montant, {'attr': {'class': 'valid-feedback'}}) }}
                                </div>
                            </div>




                            <div class="mb-3 row justify-content-center">
                                <div class="col-sm-10 text-center mt-5">
                                    <button type="submit" class="btn btn-success mt-5">Confirmer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
    {{ form_end(form) }}


{% endblock %}