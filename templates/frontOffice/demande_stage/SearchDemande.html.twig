{#{% extends 'BaseFront.html.twig' %}#}
{% extends 'yesser.html.twig' %}
{% block title %} Recrutement {% endblock %}
{% block stylsheet %}

{% endblock %}
{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <body style="background-color: #6c6c6c">


    <div class="content-body" style="margin-top: 100px;margin-bottom: 30px">

        <div class="container-fluid" style="margin-top: 100px">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Lien pour ajouter un nouveau crédit -->


                    <!-- row -->
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h6 style="margin-bottom: 20px;margin-top: 20px;font-size: 36px"> Vos demandes </h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">

                                        <table class="table table-responsive-md">
                                            <thead>
                                            <tr >

                                                <th><strong>Nom</strong></th>
                                                <th><strong>Prénom</strong></th>
                                                <th><strong>Email</strong></th>
                                                <th><strong>Numéro de téléphone</strong></th>
                                                <th><strong>CV</strong></th>
{#                                                <th><strong>date</strong></th>#}
                                                <th><strong>Lettre De Motivation</strong></th>
                                                <th><strong>Domaine</strong></th>
                                                <th style="margin-left: 20px"><strong>Etat de demande</strong></th>
                                                <th style="margin-left: 20px"><strong>action</strong></th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% for a in Demandes %}
                                                <tr>

                                                    <td>{{ a.nom }}</td>
                                                    <td>{{ a.prenom }}</td>
                                                    <td>{{ a.email }}</td>
                                                    <td>{{ a.numerotelephone }}</td>
                                                    {#                                        <td>{{ a.cv }}</td>#}
                                                    {#                                        <td><a href="{{ asset('upload/CV' ~ a.cv) }}"></a></td>#}
                                                    <td>
                                                        <a href="{{ asset('uploads_directory/' ~ a.cv) }}" target="_blank"><button class="badge  badge-success">Ouvrir PDF</button></a><br><br>
                                                        <a href="{{ asset('uploads_directory/' ~ a.cv) }}" download="{{ a.nom ~ '_' ~ a.prenom ~ '.pdf' }}">
                                                            <button class="btn-rounded btn-warning">Télécharger  &nbsp;<span class="btn-icon-start text-warning"><i class="fa fa-download color-warning"></i>
                                                                              </span></button></a>

                                                    </td>

{#                                                    <td>{{ a.date | date('d F Y') }}</td>#}
                                                    <td style="color:#777;
                                                        font-size: 15px;
                                                        display: -webkit-box;
                                                        -webkit-line-clamp: 2;
                                                        -webkit-box-orient: vertical;
                                                        overflow: hidden;
                                                        line-height: 1.5;">{{ a.lettremotivation }}</td>
                                                    <td>{{ a.domaine }}</td>
                                                    <td class="align-middle">
                                                        {% if (a.etat == 'accept') %}
                                                            <span class="badge badge-sm bg-gradient-success" style="background-color: #32863c;font-size: 18px" >Approuvé</span>
                                                         {% endif%}

                                                        {% if (a.etat == 'refuse') %}
                                                            <span class="badge badge-sm bg-gradient-danger" style="background-color: #f31c1c;font-size: 18px"> &nbsp; Réfuser &nbsp;  </span>
                                                            {% endif %}
                                                        {% if (a.etat == 'encours') %}

                                                            <span class="badge badge-sm bg-gradient-secondary" style="background-color: #d5bc11;font-size: 18px">En cours</span>


                                                          <td> <span> <a href="{{ path('modifierDemande', {'id':a.id,'numero':a.numerotelephone}) }}">
                                                                <button class="btn btn-success shadow btn-xs sharp me-1">modifier</button></a>
                                                            <a href="{{ path('deleteDemande', {'id':a.id,'numero':a.numerotelephone}) }}">
                                                                <button class="btn btn-danger shadow btn-xs sharp">supprimer</button></a>
                                                                  </span>
                                                          </td>
                                                    {% endif %}




                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>






                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}