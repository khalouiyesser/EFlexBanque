{% extends 'base.html.twig' %}

{% block title %}Nouvel événement{% endblock %}

{% block body %}
    <h1>Créer un nouvel événement</h1>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Formulaire pour ajouter un événement</h5>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_row(form.nom, {'attr': {'class': 'form-control'}, 'id': 'nom'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.description, {'attr': {'class': 'form-control'}, 'id': 'description'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateDebut, {'attr': {'class': 'form-control'}, 'id': 'dateDebut'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateFin, {'attr': {'class': 'form-control'}, 'id': 'dateFin'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.lieu, {'attr': {'class': 'form-control'}, 'id': 'lieu'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.organisateur, {'attr': {'class': 'form-control'}, 'id': 'organisateur'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.prix, {'attr': {'class': 'form-control'}, 'id': 'prix'}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
