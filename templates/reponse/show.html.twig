{% extends 'baseadmin.html.twig' %}
{% block nompage %}Les détails de la réponse
{% endblock %}

{% block body %}
    <!--**********************************
            Content body start
        ***********************************-->

    <div class="content-body">
        <div
                class="container-fluid">
            <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="email-left-box px-0 mb-3">
                                <div class="p-0">
                                    <a href="#" class="btn btn-primary btn-block">Réponses</a>
                                </div>
                                <div class="mail-list rounded mt-4">
                                    <a href="{{ path('app_reponse_delete', {'id': reponse.id}) }}" class="list-group-item" onclick="return confirm('Are you sure you want to delete this item?');">
                                        <i class="fa fa-trash font-18 align-middle me-2"></i>Supprimer</a>
                                </div>
                                <div class="mail-list rounded overflow-hidden mt-4">
                                    <div class="intro-title d-flex justify-content-between my-0">
                                        <h5>Département :</h5>
                                        <i class="fa fa-chevron-down"></i>
                                    </div>
                                    <a href="email-inbox.html" class="list-group-item">
										<span class="icon-warning">
											<i class="fa fa-circle"></i>
										</span>
                                        {{ reponse.reclamation.depRec }}</a>
                                </div>
                            </div>
                            <div class="email-right-box ms-0 ms-sm-4 ms-sm-0">
                                <div class="toolbar mb-4" role="toolbar">
                                    <div class="mb-3 d-flex align-items-center">
                                        <h5 class="mb-0 me-2">Adresse de réclamation : &nbsp;&nbsp;</h5>
                                        <input type="text" id="adrRec" class="form-control bg-transparent text-center" value="{{ reponse.reclamation.adrRec }}" readonly style="border: 1px solid #ccc; border-radius: 20px; width: 150px;">
                                    </div>
                                    <div class="mb-3 d-flex align-items-center">
                                        <h5 class="mb-0 me-2">Adresse de réponse :&nbsp;&nbsp;</h5>
                                        <input type="text" id="adrRep" class="form-control bg-transparent text-center" value="{{ reponse.adrRep }}" readonly style="border: 1px solid #ccc; border-radius: 20px; width:150px;">
                                    </div>
                                    <div class="mb-3">
                                        <label for="dateRep" class="form-label font-weight-bold">
                                            <h5>Date de réponse :&nbsp;&nbsp;</h5>
                                        </label>
                                        <div class="d-inline-flex align-items-center">
                                            <input type="text" id="dateRep" class="form-control bg-transparent" value="{{ reponse.dateRep ? reponse.dateRep|date('Y-m-d H:i:s') : '' }}" readonly style="border: 1px solid #ccc; border-radius: 20px; width: 100px;">
                                        </div>
                                    </div>

                                    <div class="mb-3 d-flex align-items-center">
                                        <h5 class="mb-0 me-2">Contenu de réponse :</h5>
                                        <textarea id="contenuRep" class="form-control bg-transparent text-center" rows="15" readonly style="border: 1px solid #ccc; border-radius: 20px; width: 250px;">{{ reponse.contenuRep }}</textarea>
                                    </div>
                                    <div class="mb-3 d-flex align-items-center">
                                        <h5 class="mb-0 me-2">Pièce jointe de réponse :</h5>
                                        <div>
                                            <a href="{{ asset('uploads_directory_rec/' ~ reponse.pieceJRep) }}" target="_blank">
                                                <button class="badge badge-success">Ouvrir PDF</button>
                                            </a>
                                            <a href="{{ asset('uploads_directory_rec/' ~ reponse.pieceJRep) }}" download="{{reponse.pieceJRep ~ '_' ~ '.pdf' }}">
                                                <button class="btn-rounded btn-warning">Télécharger  &nbsp;<span class="btn-icon-start text-warning">
														<i class="fa fa-download color-warning"></i>
													</span>
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="text-start mt-4 mb-3">
                                        <a href="{{path('app_reponse_index')}}" class="btn btn-primary btn-sl-sm me-2">
											<span class="me-2">
												<i class="fa fa-paper-plane"></i>
											</span>Liste des réponses</a>
                                    </div>


                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    </div></div></div><!--**********************************
	    Content body end
	***********************************-->{% endblock %}
