{% extends 'baseadmin.html.twig' %}
{% block nompage %}Répondre
{% endblock %}
{% block stylesheets %}
    <style>
        .custom-border {
            border: 1px solid #000000; /* Définir la bordure noire */
        }
    </style>
{% endblock %}

{% block body %}
<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
    <div
            class="container-fluid">


        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box px-0 mb-3">
                            <br><br>
                            <div class="p-0">
                                <a href="{{path('app_reponse_index')}}" class="btn btn-primary btn-block">Revenir à la liste des réponses</a>
                            </div>


                        </div>
                        <div class="email-right-box ms-0 ms-sm-4 ms-sm-0">
                            <div class="toolbar mb-4" role="toolbar">


                                <div class="compose-content">
                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                    {#  <div class="mb-3">
										                                               {{ form_label(form.adrRep, 'Adresse répondant :') }}
										                                                {{ form_row(form.adrRep, {'attr': {'class': 'form-control bg-transparent'},'id':'adrRep', 'label': false, 'placeholder': 'Votre adresse:'}) }}

										                                            </div>
										                                                <div class="mb-3">
										                                                {{ form_label(form.dateRep, 'Date de la réponse :') }}
										                                                {{ form_row(form.dateRep, {'attr': {'class': 'form-control bg-transparent'}, 'id':'dateRep' ,'label': false, 'placeholder': 'date'}) }}

										                                            </div>
                                    #}
                                    <br><br>
                                    <div class="mb-3">
                                        {{ form_label(form.contenuRep, 'Contenu de la réponse :') }}
                                        <br>
                                        {{ form_row(form.contenuRep, {'attr': {'class': 'textarea_editor form-control custom-border','id':'contenuRep', 'rows': '15', 'placeholder': 'Entrez votre réponse'}}) }}
                                    </div><br>
                                    <div class="mb-3">
                                        {{ form_label(form.pieceJRep, 'Pièce jointe :') }}<br><br>
                                        {{ form_row(form.pieceJRep, {'attr': {'class': 'form-control  custom-border'}, 'id':'pieceJRep' ,'label': false, 'placeholder': 'piece jointe'}) }}

                                    </div>


                                </div>
                                <div class="text-start mt-4 mb-3">
                                    <button class="btn btn-primary btn-sl-sm me-2" type="submit">
											<span class="me-2">
												<i class="fa fa-paper-plane"></i>
											</span>Envoyer</button>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!--**********************************
                Content body end
            ***********************************-->
    {% endblock %}
